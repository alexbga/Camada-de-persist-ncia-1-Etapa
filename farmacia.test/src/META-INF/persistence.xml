<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="farmacia.testPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.farmacia.entity.Pessoa</class>
    <class>br.com.farmacia.entity.Endereco</class>
    <class>br.com.farmacia.entity.Sexo</class>
    <class>br.com.farmacia.entity.Telefone</class>
    <class>br.com.farmacia.entity.TipoTelefone</class>
    <class>br.com.farmacia.entity.Funcionario</class>
    <class>br.com.farmacia.entity.UnidadeFederativa</class>
    <class>br.com.farmacia.entity.Fornecedor</class>
    <class>br.com.farmacia.entity.ItemVenda</class>
    <class>br.com.farmacia.entity.Medicamento</class>
    <class>br.com.farmacia.entity.PrincipioAtivo</class>
    <class>br.com.farmacia.entity.Venda</class>
    <class>br.com.farmacia.entity.Login</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/farmacia?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
